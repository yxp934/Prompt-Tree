{
  "name": "@yxp934/prompt-tree",
  "version": "0.6.1",
  "description": "Node-based DAG AI chat client with a tree CLI launcher (Next.js standalone).",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "tree": "bin/tree.mjs"
  },
  "files": [
    "bin/",
    ".next/standalone/"
  ],
  "scripts": {
    "dev": "next dev -p 1666",
    "build": "next build --webpack",
    "start": "next start -p 1666",
    "prepack": "npm run build && node scripts/prepare-standalone.mjs",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier . --write",
    "format:check": "prettier . --check",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "next": "16.1.4",
    "pdfjs-dist": "^4.10.38",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-markdown": "^9.0.1",
    "reactflow": "^11.11.4",
    "remark-gfm": "^4.0.0",
    "uuid": "^13.0.0",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9",
    "eslint-config-next": "16.1.4",
    "eslint-config-prettier": "^10.1.8",
    "fake-indexeddb": "^6.2.5",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4",
    "typescript": "^5",
    "vitest": "^4.0.18"
  }
}
